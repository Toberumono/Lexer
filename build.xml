<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create jar" name="Create Runnable Jar for Project lexer" xmlns:if="ant:if" xmlns:unless="ant:unless">
	<!--ANT 1.9.4 is required                                        -->

	<property name="src" location="src" />
	<property name="bin" location="bin" />
	<property name="doc" value="doc" />
	<property unless:set="prefix" name="prefix" value="../" />
	<property name="jar" location="${prefix}lexer.jar" />

	<!--Files that should be excluded from the build go here-->
	<patternset id="Build Excludes">
		<exclude name="testCases/**" />
	</patternset>

	<target name="javadoc">
		<javadoc access="protected" author="true" destdir="${doc}" packagenames="toberumono.lexer.*" source="1.8" splitindex="true" use="true" version="true">
			<fileset dir="${src}">
				<patternset refid="Build Excludes" />
			</fileset>
		</javadoc>
	</target>

	<target name="build">
		<mkdir dir="${bin}" />
		<javac srcdir="${src}" destdir="${bin}" includeAntRuntime="false" debug="true" debuglevel="lines,vars,source">
			<patternset refid="Build Excludes" />
		</javac>
	</target>

	<target name="create jar" depends="clean,javadoc,build">
		<jar destfile="${jar}" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="${bin}" />
			<fileset dir="." includes="${doc}/**" />
			<fileset dir="${src}" />
		</jar>
	</target>

	<target name="clean" description="Remove all files created by the build process.">
		<delete dir="${bin}" />
		<delete dir="${doc}" />
	</target>
</project>
